<div class="container">
    <section id="page-name">
        <img id="main-image" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSStf7br2wEMxxxSjc2LdrmeqDKca3P0Ug3XyxaNs2ebL9D6g7C6Q"
            width="480" height="326" frameBorder="0" class="giphy-embed" allowFullScreen></img>
        <h1>Eat-Da-Buger</h1>
    </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table>
                {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block}} {{/unless}} {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}} {{#if devoured}}
            <div>{{id}}. {{burger_name}}</div>
            {{/if}} {{/each}}
        </div>
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>